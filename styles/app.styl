html
  font-size 16px
  font-family sans-serif  

#environment, #chain, #infrastructure
  display flex
  justify-content space-around
  align-items center
  height 33%

.node
  border 1px solid black
  padding 1.5rem

#environment .node
  border-radius 50%
#chain .node
  border-radius 1.5rem
#infrastructure .node
  border-radius 0
