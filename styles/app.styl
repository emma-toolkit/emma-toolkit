@import '~html5-reset/assets/css/reset.css'

html
  font-size 16px
  font-family sans-serif

.container
  height 33%
  position relative

.pre-layout
  display flex
  justify-content space-around
  align-items center

.post-layout .node
  position absolute

.node
  border 1px solid black
  padding 1.5rem
  display inline-block

#environment .node
  border-radius 50%
#chain .node
  border-radius 1.5rem
#infrastructure .node
  border-radius 0

#edges
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  stroke black
  stroke-width 2px
  fill none
