
// splash page
#splash
  position fixed
  width 100%
  height 100%
  background $emma-green
  z-index 100000
  text-align center
  color white
  padding-top 10vh

  h1
    font-size 26px
    margin-bottom 1em
  p
    max-width: 600px
    margin 20px
    margin 0 auto
    a
      color #80DEEA

  .splash-small-p
    font-size 12px
    line-height 1.4em
    margin 2em auto
    color #E0F2F1
  .button
    width 300px
    margin-bottom 1em


  .splash-logos img
    max-height 140px
    margin 0 10px


#file-option-continue
  // width 300px
  display inline-block
  padding 30px
  background #00695C
  vertical-align top

#file-options-other
  display inline-block
  padding 30px
  vertical-align top

.existing-project-info
  font-style italic
  font-size 13px
  b
    font-weight bold
