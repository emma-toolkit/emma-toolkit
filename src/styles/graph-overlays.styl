small_margin = 10px
title_color = #37474F

#graph-header
  position absolute
  text-align center
  width 100%
  padding small_margin
  z-index 100
#graph-title
  font-size 1.3em
  color title_color
  font-weight bold
  display inline-block
  margin-right small_margin
#state-toggle
  display inline-block
  label
    margin 0 .3em
    input
      margin-right .2em
      vertical-align baseline

.section-title
  position absolute
  color #78909C
  text-transform uppercase
  font-size 11px
  bottom small_margin
  left small_margin


.overlay, #edge-line
  position absolute
  top 0
  left 0
  width 100%
  height 100%
.handle
  width handle_size
  height handle_size
  background handle_color
  z-index 100
  position absolute
  margin-top -(handle_size / 2)px
  margin-left -(handle_size / 2)px
  cursor -webkit-grab
#edge-line line
  stroke handle_color
  stroke-width 3
  stroke-dasharray 8,4
.disruption
  position absolute
  font-size disruption_size
  font-weight bold
  line-height disruption_size
  width disruption_size
  height disruption_size
  text-align center
  color red
  z-index 100

