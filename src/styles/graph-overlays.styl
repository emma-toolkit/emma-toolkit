small_margin = 10px
title_color = #37474F


#graph-title
  position absolute
  text-align center
  width 100%
  font-size 1.3em
  padding small_margin
  z-index 100
  color title_color
  font-weight bold

.add-entity-button.button
  position absolute
  bottom small_margin * 3
  left small_margin
  text-align center
  width: 30px
  height 30px
  vertical-align baseline
  display inline-block
  line-height 24px
  z-index: 1000
  background: $emma-magenta
  font-size: 24px
  padding 0
  border-radius 50%
  &:hover
    background #C2185B

.nodetype-title
  position absolute
  color #78909C
  text-transform uppercase
  font-size 11px
  bottom small_margin
  left small_margin

