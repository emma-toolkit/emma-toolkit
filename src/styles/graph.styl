// This is a special css file + format used by cytoscape
// - see http://js.cytoscape.org/#style

$line-color = #666
$selected-color = #660033

core
  active-bg-color white
  active-bg-opacity 0

node, edge
  color #333
  content data(label)
  text-wrap wrap
  overlay-color white
  overlay-opacity 0
  &.inactive
    opacity 0.4

node
  width label
  height label
  background-color white
  border-width 1px
  border-color $line-color
  text-valign center
  text-halign center
  text-max-width 150
  padding-top 15px
  padding-bottom 15px
  padding-right 20px
  padding-left 20px
  font-size 13px
  &.parent
    background-opacity 0
    border-width 0
  &.environment
    shape ellipse
  &.chain
    shape roundrectangle
    &.initial, &.final
      shape rectangle
  &.infrastructure
    shape octagon

edge
  line-color $line-color
  target-arrow-color $line-color
  text-valign bottom
  text-border-opacity 0
  text-outline-color white
  text-outline-opacity .8
  text-outline-width 2
  font-size: 13px

  &.chain
    target-arrow-shape triangle
  &.infrastructure
    target-arrow-shape circle

node, edge
  &:selected
    border-color $selected-color
    line-color $selected-color
    target-arrow-color $selected-color
    border-width 2px
