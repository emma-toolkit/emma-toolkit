@import './reset.css'

controls_width = 30%
controls_background = #333
button_size = 25px
border_radius = 5px
h_space = 5px
nodetype_border = 3px dashed #aaa
body_color = #333
heading_color = #aaa
ui_color = #425882
handle_size = 12px
handle_color = ui_color
disruption_size = 20px

header_bar_height = 36px

header_fonts = Futura, 'Trebuchet MS', Arial, sans-serif;
body_fonts = 'Helvetica Neue', Helvetica, Arial, sans-serif

$emma-green = #008080
$emma-green-dark = #006666
$emma-green-bright = #A7FFEB
$emma-magenta = #660033
$emma-magenta-bright = #990033

html, body
  height: 100%

*, *:before, *:after
  box-sizing: border-box

body
  color body_color
  font-family: body_fonts

input, button
  font-family: body_fonts

a
  color ui_color
  cursor pointer

minor_nodetype()
  height 25%

ui_button()
  display block
  width button_size
  height button_size
  text-decoration none
  line-height button_size * 0.9
  z-index 100
  font-size button_size
  border-radius border_radius
  background controls_background


h1, h2, h3, h4, h5
  font-family: header_fonts

#main-wrapper
  width 100%
  height 100%
  overflow hidden

#header-bar
  height: header_bar_height
  line-height: header_bar_height
  padding-left 15px
  background: $emma-green
  color: white
  h1
    font-size: 15px
    a
      color white
      text-decoration none
      &:hover
        color $emma-green-bright



#display
  position absolute
  top: header_bar_height
  right: 0
  bottom: 0px
  -webkit-user-select: none
  cursor default
  border 3px solid #004D40
  &.connecting
    cursor -webkit-grabbing

#controls
  position absolute
  left 0
  top header_bar_height
  bottom 0

.controls-shown
  #display
    width 100% - controls_width
  #controls
    width controls_width
.controls-hidden
  #display
    width 100%
  #controls
    width 0
#graph-controls
  position absolute
  width 100%
  bottom 0


// Property panel

#background
  height 100%
  width 100%
  position absolute
.nodetype
  position relative
#environment
  minor_nodetype()
  border-bottom nodetype_border
#chain
  height 50%
  background white
#infrastructure
  minor_nodetype()
  border-top nodetype_border

#graph
  width 100%
  height 100%
.grabbed
  cursor move


#toggle-controls
  ui_button()
  position absolute
  left button_size * -1
  padding-left (button_size / 3.5)
  background controls_background
  border-radius border_radius 0 0 border_radius



.about-footer
  position absolute
  bottom 15px
  right 15px

  color white
  a
    color white
    font-style italic
    font-size 13px
    color #FFF176

  .logos
    img
      max-height 60px
      margin-left 10px

.small-text
  color #B2DFDB
  font-size 10px
  font-style italic

.tooltip-bubble


.tooltip
  display inline-block
  position relative
  border-radius 50%
  width 25px
  height 25px
  cursor pointer
  text-align center
  background: rgba(0,0,0,0.3);

  &:after
    content: '?'
    font-weight bold
    color white
    font-size 14px
    line-height 25px

  .tooltip-text
    // visibility hidden
    position absolute
    left 100%
    width 250px
    min-height 50px
    margin-left 10px
    top -10px
    z-index 500
    // background-color black
    color white
    padding 10px 15px
    font-size 12px
    line-height 1.4em
    background: rgba(0,0,0,0.3);

    box-shadow: 5px 5px 15px rgba(48,54,61,0.3)
    background: #2a3035
    opacity: 0
    cursor: default
    pointer-events: none
    text-align left
    font-style italic

    transform: translate3d(-10px,0px,10px) scale(.97, .97)
    transition: opacity 0.3s, transform 0.3s


    &:after
      content: '';
      top: 15px;
      left: 0px;
      border: solid transparent;
      height: 0;
      width: 0;
      position: absolute;
      pointer-events: none;
      border-color: transparent;
      border-right-color: #2a3035;
      border-width: 10px;
      margin-left: -20px;

  &:hover
    color $emma-green-bright
    background #333

    .tooltip-text
      pointer-events auto
      opacity .97
      transform translate3d(0,0,0) rotate3d(0,0,0,0)

.add-entity-buttons
  position absolute
  // height 100%
  left 0
  top 4px
  bottom 4px
  right 5px

.button.add-entity-button
  display block
  position absolute
  z-index 1
  right 0px
  margin 0
  width: 36px
  height: 36px
  line-height 36px
  border-radius 50%
  text-align center
  padding 0

  &.settings
    top 3px
  &.environment
    bottom 75%
  &.note
    top 50%
  &.chain
    bottom 25%
  &.infrastructure
    bottom 0%

  .icon
    width inherit
    height inherit
    vertical-align baseline
    text-align center
    line-height inherit
    display block
    svg
      display inline-block
      vertical-align middle
      fill white
      width 18px
      height 18px

@import './notes.styl'
@import './forms.styl'
@import './graph-overlays.styl'
@import './legend.styl'
@import './splash.styl'
