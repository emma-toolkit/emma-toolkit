@import '~html5-reset/assets/css/reset.css'

controls_width = 30%
controls_background = white
button_size = 25px
border_radius = 5px

label
  font-family sans-serif

minor_nodetype()
  height 25%
  background #DDD

ui_button()
  display block
  width button_size
  height button_size
  text-decoration none
  line-height button_size * 0.9
  z-index 100
  font-size button_size
  border-radius border_radius

#display
  position absolute
#controls
  position absolute
  right 0
.controls-shown
  #display
    width 100% - controls_width
  #controls
    width controls_width
.controls-hidden
  #display
    width 100%
  #controls
    width 0
#controls-form
  padding button_size

#background
  height 100%
  width 100%
  position absolute
#environment
  minor_nodetype()
#chain
  height 50%
  background white
#infrastructure
  minor_nodetype()
.add
  ui_button()
  position relative
  top 10px
  left 10px
  background #BBB
  text-align center

#graph
  width 100%
  height 100%
.grabbed
  cursor move

#toggle-controls
  ui_button()
  position absolute
  left button_size * -1
  padding-left (button_size / 3.5)
  background controls_background
  border-radius: border_radius 0 0 border_radius
