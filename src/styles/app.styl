@import '~html5-reset/assets/css/reset.css'

controls_width = 30%
controls_background = #e0ecf3
button_size = 25px
border_radius = 5px
nodetype_border = 3px dashed #aaa

body
  color #333

a
  color #425882

minor_nodetype()
  height 25%

ui_button()
  display block
  width button_size
  height button_size
  text-decoration none
  line-height button_size * 0.9
  z-index 100
  font-size button_size
  border-radius border_radius
  background controls_background

#display
  position absolute
#controls
  position absolute
  right 0
  height 100%
  background controls_background
  label
    font-family sans-serif
    display block
.controls-shown
  #display
    width 100% - controls_width
  #controls
    width controls_width
.controls-hidden
  #display
    width 100%
  #controls
    width 0
.controls-panel
  padding button_size
#swatches
  display inline-block
.swatch
  display inline-block
  border 1px solid #999
  width 1em
  height 1em
  margin-right 2px
  &.selected
    border-color red

h1
  position absolute
  font-size 1.2em
  padding (1em / 2) 
  z-index 100
  font-family sans-serif
  color #aaa
  font-weight bold

#background
  height 100%
  width 100%
  position absolute
.nodetype
  position relative
#environment
  minor_nodetype()
  border-bottom nodetype_border
#chain
  height 50%
  background white
#infrastructure
  minor_nodetype()
  border-top nodetype_border
.add
  ui_button()
  position absolute
  bottom 10px
  left 10px
  text-align center

#graph
  width 100%
  height 100%
.grabbed
  cursor move

#toggle-controls
  ui_button()
  position absolute
  left button_size * -1
  padding-left (button_size / 3.5)
  background controls_background
  border-radius: border_radius 0 0 border_radius
