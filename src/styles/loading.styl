#loading
  font-size 10px
  position absolute
  margin auto
  left 0
  right 0
  top 0
  bottom 0
  text-indent -9999em
  border-top 1.1em solid rgba(#8ac3de, 0.4)
  border-right 1.1em solid rgba(#8ac3de, 0.4)
  border-bottom 1.1em solid rgba(#8ac3de, 0.4)
  border-left 1.1em solid #8ac3de
  -webkit-transform translateZ(0)
  -ms-transform translateZ(0)
  transform translateZ(0)
  -webkit-animation load8 1.1s infinite linear
  animation load8 1.1s infinite linear
  z-index 100

#loading
#loading:after
  border-radius 50%
  width 10em
  height 10em

@-webkit-keyframes load8
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg)
  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)

@keyframes load8
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg)  
  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)
